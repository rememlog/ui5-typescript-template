{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./webapp",
        "baseUrl": "./",
        "types": [
            "@sapui5/ts-types",
            "@sapui5/ts-types-esm"
        ],
        "paths": {
            "sap/typescript/cf/*":[
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}